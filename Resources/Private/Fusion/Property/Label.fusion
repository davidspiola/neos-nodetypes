prototype(Webandco.NodeTypes:Property.Label) < prototype(PackageFactory.AtomicFusion:Component) {

    name = 'label'
    value = ''
    postfix = ''
    tagName = 'p'

    renderer = Neos.Fusion:Tag {
        tagName = ${props.tagName}
        attributes.class = PackageFactory.AtomicFusion:ClassNames
        content = ${props.value}
        @process.makeEditable = Neos.Neos:ContentElementEditable
        @process.makeEditable.property = ${props.name + props.postfix}
    }
}
